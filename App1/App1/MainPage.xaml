<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Button x:Name="BtnCallWS" Text="Call Web Service" 
                    Clicked="BtnCallWS_Click" 
                    BackgroundColor="#71d349" 
                    TextColor="White" 
                    BorderRadius="20"/>
        <BoxView HorizontalOptions="FillAndExpand" HeightRequest="2" Color="Silver"/>
        <Label  Text   = "ID:" TextColor="#71d349"/>
        <Label  x:Name = "lblId"/>
        <Label  Text   = "Title:" TextColor="#71d349" />
        <Label  x:Name = "lblTitle"/>
        <Label  Text   = "Body:" TextColor="#71d349"/>
        <Label  x:Name = "lblBody"/>
    </StackLayout>
</ContentPage>
